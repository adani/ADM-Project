    <om:byline xml:lang="en">By David N. Blank-Edelman</om:byline>
    
    <om:asciiTitle xml:lang="en">Perl for System Administration</om:asciiTitle>
    
    <dc:modified rdf:datatype="http://www.w3.org/2001/XMLSchema#dateTime" xmlns:dc="http://purl.org/dc/terms/">2013-05-21T19:09:26.998039+00:00</dc:modified>
